<h2><%= @name %> hours</h2>
<dl class="dl-horizontal">
  <% for dow in [0..6]: %>
    <% day = moment.weekdays[dow] %>
    <% [start, stop] = @hours[day] %>
    <dt><%= day %></dt>
    <% if Holiday.isHoliday(moment().day(dow)): %>
      <dd><%= Holiday.getHoliday(moment().day(dow)).name %></dd>
    <% else if start and stop: %>
      <dd><%= @mt start %> - <%= @mt stop %></dd>
    <% else: %>
      <dd>Closed</dd>
    <% end %>
  <% end %>
</dl>
